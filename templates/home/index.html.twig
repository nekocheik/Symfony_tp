{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<div class="row">
  <div class="col-sm-12">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">{{ title }}</h5>
        <p class="card-text">
          Page d'accueil
        </p>
      </div>
    </div>
  </div>
</div>

    {% for beer in beers %}
      <div class="col-sm-6">
        <div class="card card__beers">
          <a  href="{{ path('beer', { 'id' : beer.id }) }}" class="card-body">
            <h5 class="card-title">{{ beer.name }}</h5>
            <p>Price : {{ beer.price ?? 'aucune information' }} </p>
            <p>Degree : {{ beer.degree }} </p>
            <p>{{ beer.description }}</p>
            <p><small>Date d'invention : {{ beer.publishedAt | date('d/m/Y h:i:s') }} </small></p>
            <img src="{{ asset('build/images/beer_00.jpg') }}" />
            {# Affichez les catégories dans lesquelles se trouvent vos bières  #}
            {% if beer.country  %}
                <p> Country : {{ beer.country.name}} </p>
            {% else %}
                <p>No country</p>
            {% endif %}
          </a>
        </div>
      </div>
    {% endfor %}


{% endblock %}
