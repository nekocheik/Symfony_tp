<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
           {%- block stylesheets -%}
           {# could contain other stylesheet link tags relevant to your project #}
             {{ encore_entry_link_tags('styles') }}
           {%- endblock -%}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
      {{render(controller('App\\Controller\\BarController:mainMenu', { 'routeName' : app.request.attributes.get('_route'), 'category_id' : app.request.attributes.get('id') ?? '' }))}}
        <div class="">
            <div class="flex">
                <div class="w-2/6">
                </div>
                <div class="w-4/6">
                {% block body %}{% endblock %}
                </div>
            </div>
            </div>
        </div>
    </body>
</html>